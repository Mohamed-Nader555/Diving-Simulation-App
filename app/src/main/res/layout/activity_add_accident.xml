<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dive.Accident.AddAccidentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                app:tint="@color/main_color_dark" />

            <TextView
                android:id="@+id/page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="Fill Accident Form"
                android:textColor="@color/main_color_dark"
                android:textSize="@dimen/page_header"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/small_item_drawable_padding"
                android:layout_marginBottom="@dimen/small_margin"
                android:src="@drawable/drown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="General"
                android:textColor="@color/secondary_color"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />

            <!-- Rescuer Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/rescuer_name_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Rescuer Name"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rescuer_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fatal -->
            <LinearLayout
                android:id="@+id/fatal_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/small_margin"
                    android:text="Fatal"
                    android:textColor="@color/main_color_dark"
                    android:textSize="@dimen/tiny_text" />

                <RadioGroup
                    android:id="@+id/radio_group_fatal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/radio_fatal_yes_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/secondary_color"
                        android:text="Yes"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/tiny_text" />

                    <RadioButton
                        android:id="@+id/radio_fatal_no_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/secondary_color"
                        android:text="No"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/tiny_text" />
                </RadioGroup>
            </LinearLayout>


            <!-- Training -->
            <LinearLayout
                android:id="@+id/training_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/small_margin"
                    android:text="Training"
                    android:textColor="@color/main_color_dark"
                    android:textSize="@dimen/tiny_text" />

                <RadioGroup
                    android:id="@+id/radio_group_training"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/radio_training_yes_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/secondary_color"
                        android:text="Yes"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/tiny_text" />

                    <RadioButton
                        android:id="@+id/radio_training_no_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/secondary_color"
                        android:text="No"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/tiny_text" />
                </RadioGroup>
            </LinearLayout>


            <!-- Date -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/date_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Date"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconDrawable="@drawable/ic_date_range"
                app:endIconMode="custom"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:enabled="false"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Time -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/time_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Time"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconDrawable="@drawable/ic_access_time"
                app:endIconMode="custom"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:enabled="false"

                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Extent of Injury -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/extent_of_injury_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Extent of Injury"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/extent_of_injury_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:text="Victim Info"
                android:textColor="@color/secondary_color"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />

            <!-- Victim's Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/vic_name_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Victim's Name"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/vic_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Victim's Nationality -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/vic_nationality_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Victim's Nationality"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/vic_nationality_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Victim's Age -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/vic_age_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Victim's Age"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/vic_age_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Victim's Gender -->
            <LinearLayout
                android:id="@+id/vic_gender_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/small_margin"
                    android:text="Victim's Gender"
                    android:textColor="@color/main_color_dark"
                    android:textSize="@dimen/tiny_text" />

                <RadioGroup
                    android:id="@+id/radio_group_vic_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/radio_vic_gender_male_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:buttonTint="@color/secondary_color"
                        android:text="Male"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/tiny_text" />

                    <RadioButton
                        android:id="@+id/radio_vic_gender_female_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:buttonTint="@color/secondary_color"
                        android:text="Female"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/tiny_text" />
                </RadioGroup>
            </LinearLayout>


            <!-- Victim's Certification Level -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/vic_cert_level_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Victim's Certification Level"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/vic_cert_level_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Found on Surface -->
            <LinearLayout
                android:id="@+id/found_on_surface_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/small_margin"
                    android:text="Found on Surface"
                    android:textColor="@color/main_color_dark"
                    android:textSize="@dimen/tiny_text" />

                <RadioGroup
                    android:id="@+id/radio_group_found_on_surface"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/radio_found_on_surface_yes_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/secondary_color"
                        android:text="Yes"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/tiny_text" />

                    <RadioButton
                        android:id="@+id/radio_found_on_surface_no_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/secondary_color"
                        android:text="No"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/tiny_text" />
                </RadioGroup>
            </LinearLayout>


            <!-- Depth at Accident -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/depth_at_accident_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Depth at Accident"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/depth_at_accident_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:text="Accident Location"
                android:textColor="@color/secondary_color"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />

            <!-- City -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/city_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="City"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/city_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Current Dive Site -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/current_dive_site_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Current Dive Site"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/current_dive_site_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Current Under Water Conditions -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/current_underwater_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Current Under Water"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/current_underwater_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Current Surface Conditions -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/current_surface_tvl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/tiny_margin"
                android:hint="Current Surface Conditions"
                app:boxStrokeColor="@color/main_color_dark"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/main_color_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/current_surface_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="name"
                    android:textColor="@color/main_color_dark"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
