<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daily_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color_dark">


    <TextView
        android:id="@+id/daily_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_small_start_end"
        android:padding="@dimen/_7sdp"
        android:text="Sun"
        android:textColor="?attr/text_color"
        android:textSize="@dimen/mid_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/temp_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/daily_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="30"
                android:textColor="?attr/text_color"
                android:textSize="@dimen/mid_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/daily_deg_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small_start_end"
                android:layout_toEndOf="@id/daily_temp"
                android:gravity="center"
                android:text="@string/degree_symbol"
                android:textColor="?attr/text_color"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/daily_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_item_drawable_padding"
            android:text="Clear Sky"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/small_text_size" />


    </LinearLayout>

    <ImageView
        android:id="@+id/daily_image"
        android:layout_width="@dimen/small_icons_size"
        android:layout_height="@dimen/small_icons_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:src="@drawable/sun" />

</RelativeLayout>

