<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDiveSite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_margin="12dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/main_color"
        app:cardCornerRadius="@dimen/big_margin"
        app:cardElevation="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageDiveSiteBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/diving_site_2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9C0A4FBD" />

            <TextView
                android:id="@+id/textDiveSiteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mid_margin"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/mid_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Title"
                android:textColor="@color/whitey"
                android:textSize="@dimen/big_text"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/textDiveSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDiveSiteTitle"
                android:layout_marginStart="@dimen/mid_margin"
                android:layout_marginEnd="@dimen/mid_margin"
                android:ellipsize="end"
                android:maxLines="5"
                android:padding="12dp"
                android:text="@string/dot_loading"
                android:textColor="@color/whitey"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>