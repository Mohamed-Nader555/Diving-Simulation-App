<resources>
    <!-- Base application theme. -->
    <style name="Theme.DivingSimulation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color_dark</item>
        <item name="colorOnPrimary">@color/main_color_dark</item>

        <item name="background_color">@color/whitey</item>
        <item name="text_color">@color/main_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/main_color_dark</item>
        <item name="colorOnSecondary">@color/whitey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.DivingSimulation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/main_color_dark</item>
    </style>


    <style name="TextAppearance.Design.Hint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?attr/colorControlActivated</item>
    </style>

    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingLeft">@dimen/mid_margin</item>
    </style>


    <style name="Theme.DivingSimulation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ShopOnTheGo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DivingSimulation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>